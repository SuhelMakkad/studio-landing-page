---
import type { HTMLAttributes } from "astro/types";

export interface Props extends HTMLAttributes<"img"> { 
  rounded?: boolean; 
  fullSize?: boolean; 
};

const { rounded = true, fullSize = true, class: className, ...attrs } = Astro.props;
---

<img class={`${rounded ? "rounded-lg" : ""} ${fullSize ? "w-full h-full" : ""} ${className}`} {...attrs} />
