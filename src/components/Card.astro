---
import LinkWithUnderline from "./LinkWithUnderline.astro";

export type Props = {
  title: string;
  description: string;
  href?: string;
};

const { title, description, href = "/" } = Astro.props;
---

<div class="flex flex-col gap-3 rounded-lg p-6 transition-shadow shadow-smooth-xl">
  <span class="text-2xl font-semibold">{title}</span>
  <span>{description}</span>
  <div>
    <LinkWithUnderline class="text-blue-500 font-semibold">Experienced team</LinkWithUnderline>
  </div>
</div>
