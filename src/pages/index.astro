---
import { images } from "@/utils/imgData";

import Layout from "@/layouts/Layout.astro";
import Gradient from "@/components/Gradient.astro";
import H1 from "@/components/heading/H1.astro";
import H2 from "@/components/heading/H2.astro";
import Button from "@/components/Button.astro";
import Tag from "@/components/heading/Tag.astro";
import Image from "@/components/Image.astro";
import Testimonial from "@/components/Testimonial.astro";
import LinkWithUnderline from "@/components/LinkWithUnderline.astro";

import "@/styles/global.css";
import Card from "@/components/Card.astro";
import CarouselWrapper from "@/components/carousel/CarouselWrapper.astro";
import CarouselItem from "@/components/carousel/CarouselItem.astro";
